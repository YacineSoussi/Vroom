{% extends 'base.html.twig' %}

{% block title %}Page de  {{ user.fullName }}!{% endblock %}

{% block body %}
<div class="container">
<div class="row">
<div class="col-3">
    <img src="{{user.avatar}}" class="avatar" alt="avatar de {{ user.fullName}}">
    <br>
    <span class="badge badge-primary">{{user.annonces | length}} annonces</span>
</div>
<div class="col-9">
<h1>{{user.fullName}}</h1>
{% if user is same as (app.user) %}
    <div class="mt-3">
        <a href="{{ path('account_profil')}}" class="btn btn-primary mr-2 mb-2">
                Modifier mes informations !
        </a>
    </div>
{% endif %}

</div>
</div>
        {{user.description | raw}}
        <hr>

        <h2>Les annonces de {{user.fullName}}</h2>
                <div class="row">
        {% if user.annonces| length > 0 %}

        {% for annonce in user.annonces %}
            {% include "annonce/_annonce.html.twig" %}
        {% endfor %}
        </div>
       

        {% else %}
            <div class="alert alert-warning col-12">
                <p>
                    <strong> {{user.fullName}}</strong> n'a pas encore d'annonce sur le site.
            </div>
        {% endif %}
        

</div>
{% endblock %}
