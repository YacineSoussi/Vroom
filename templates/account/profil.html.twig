 {% extends "base.html.twig" %}

 {% block title %} Modification du profil {% endblock %}

{% block body %}
<div class="container">
<h1 class="my-5">Modificationdu profil</h1>
        {{form_start(form)}}
        <div class="row">
                <div class="col">
                <div class="alert alert-light">
                        <h2 class="alert-heading">Informations</h2>
                        <hr>
                        {{ form_row(form.firstName) }}
                        {{ form_row(form.lastName) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.avatar) }}
                </div>
                </div>
                <div class="col">
                <div class="alert alert-light">
                        <h2 class="alert-heading">Détails</h2>
                        <hr>
                        {{ form_row(form.introduction) }}
                        {{ form_row(form.description) }}

                        <hr>
                        <p>Vous avez terminé ? Sauvegardez !</p>
                        <button type="submit" class="btn btn-primary">Enrengistrer les modifications</button>
                </div>
                </div>
        </div>
        {{form_widget(form)}}

        
        {{ form_end(form)}}
</div>
{% endblock %}

