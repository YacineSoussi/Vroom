{% set url = path('annonces_show', {'adresse': annonce.adresse}) %}
            <div class="col-md-4">
                <div class="card pg-light mb-3">
                    <div class="card header text-center">
                        {{ annonce.chambres }} ann√©e,
                        <strong>{{ annonce.prix}} / jour</strong>
                        <br>
                        {% if annonce.commentaires|length > 0 %}
                                <small>{{annonce.commentaires|length }} commentaires</small>
                        {% else %}
                            <small>Pas encore de commentaire</small>
                        {% endif %}
                        
                        

                    </div>
                    <a href="{{ url }}">
                    <img src="{{annonce.profilImage}}" alt="Image de l'appartement" class="src" style="height: 200px; width:100%; display:block">
                    </a>
                    <div class="card-body">
                    <a href="{{ url }}">
                        <h4 class="card-title">{{annonce.title}}</h4>
                        </a>
                    </div>
                    <p class="card-text">
                        {{annonce.introduction}}
                    </p>
                    <a href="{{ url }}" class="btn btn-secondary">En savoir plus</a>

                    {% if app.user and app.user == annonce.auteur %}
                      <a href="{{ path('annonces_edit', {'adresse': annonce.adresse}) }}" class="btn btn-secondary">Modifier l'annonce</a>
                      <a href="{{ path('annonces_delete', {'adresse': annonce.adresse})}}" class="btn btn-danger">supprimer l'annonce</a>
        {% endif %}

                </div>
            </div>