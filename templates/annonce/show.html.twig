{% extends 'base.html.twig' %}

{% block title %}
    {{annonce.title}}
{% endblock %}

{% block body %}

    <div class="ad-title" style="background-image: url({{ annonce.profilImage }})">
        <div class="container">
            <h1>{{annonce.title}}</h1>
            <p>{{annonce.introduction}}</p>
            <p class="h2">
                <strong>{{annonce.chambres}}
                    chambres</strong>
                pour
                <strong>{{annonce.prix | number_format(2, ',', ' ')}}&euro;</strong>
                par nuit
            </p>
            <a href="" class="btn btn-primary">Reserver</a>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-8 mb-3">
                {{annonce.contenu | raw }}

<div class="bd-example">
  <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
    {% for image in annonce.images %}
      <li data-target="#carouselExampleCaptions" data-slide-to="{{ loop.index0 }}"
      {% if loop.first %} class="active"{% endif %}></li>
      {% endfor %}
      
    </ol>
    <div class="carousel-inner">
    {% for image in annonce.images %}
<div class="carousel-item {% if loop.first %}active {% endif %}">
        <img src="{{ image.url }}" class="d-block w-100" alt="First slide">
        <div class="carousel-caption d-none d-md-block">
          <h5>{{ annonce.title }}</h5>
          <p>{{image.legend}}</p>
        </div>
      </div>
    {% endfor %}
       </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

            </div>


            <div class="col">
                <div class="row">
                    <div class="col-4"></div>
                    <img src="http://placehold.it/64x64" alt="avatar de ta mere">
                </div>
                <div class="col">
