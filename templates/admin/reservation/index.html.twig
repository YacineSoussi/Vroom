{% extends 'admin/base.html.twig' %}

{% block title %}Administration des réservations{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Administration des réservations</h1>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Visiteur</th>
                    <th>Annonce</th>
                    <th>Durée</th>
                    <th>Montant</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                {% for reservation in reservation %}
                <tr>
                    <td>{{reservation.id}}</td>
                    <td>{{reservation.createdAt|date('d/m/Y H:i')}}</td>
                    <td><img src="{{reservation.booker.avatar}}" alt="" class="avatar avatar-micro"> {{reservation.booker.fullName}}</td>
                    <td>{{reservation.annonce.title}}</td>
                    <td>{{reservation.duration}}</td>
                    <td>{{reservation.montant | number_format(2, ",", " ")}} &euro;</td>
                    <td>
                        <a href="{{path('admin_reservation_edit', {'id': reservation.id})}}" class="btn btn-primary">
                            <i class="fas fa-pen"></i>
                        </a>
                        <a href="{{path('admin_reservation_delete', {'id': reservation.id})}}" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        
        </table>
        
       
    </div>
{% endblock %}